---
interface Props {
  title: string;
}

const {
  title = "Home",
  //image = "https://res.cloudinary.com/dp3ppkxo5/image/upload/v1693776174/spotify-astro/playlist_2_f9ymlx.jpg",
} = Astro.props;
import { ViewTransitions } from "astro:transitions";
import PageNavigation from "../components/PageNavigation.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Jacob Laramee" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Jacob Laramee</title>
    <!--
    <meta property="og:image" content={image} />
    <meta name="twitter:image" content={image} />
	 -->
    <ViewTransitions fallback="none" />
  </head>
  <body class="">
    <div class="relative h-screen flex items-stretch">
      <div
        class="bg-gradient-to-b from-white to-slate-400 dark:from-zinc-900 dark:to-slate-700 flex-1 mx-auto overflow-y-auto"
      >
        <PageNavigation />
        <slot />
      </div>
    </div>
    <style>
      html {
        margin: 0;
        padding: 0;
      }
    </style>
  </body>
</html>
